<%= form_for @invoice do |f| %>
  <div class="form-group row">
    <%= f.label :number, class: "text-right col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :number, class: "form-control", id: "invoice-number" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :date, class: "text-right col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :date, class: "form-control", id: "invoice-date" %>
    </div>
  </div>
  <%= f.fields_for :customer do |fc| %>
  <div class="form-group row">
    <%= fc.label :name, class: "text-right col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= fc.text_field :name, class: "form-control", id: "invoice-customer-name" %>
    </div>
  </div>
  <div class="form-group row">
    <%= fc.label :email, class: "text-right col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= fc.text_field :email, class: "form-control", id: "invoice-customer-email" %>
    </div>
  </div>
  <div class="form-group row">
    <%= fc.label :cif, class: "text-right col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= fc.text_field :cif, class: "form-control", id: "invoice-customer-cif" %>
    </div>
  </div>
  <div class="form-group row">
    <%= fc.label :reg, class: "text-right col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= fc.text_field :reg, class: "form-control", id: "invoice-customer-reg" %>
    </div>
  </div>
  <div class="form-group row">
    <%= fc.label :address, class: "text-right col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= fc.text_field :address, class: "form-control", id: "invoice-customer-address" %>
    </div>
  </div>
  <div class="form-group row">
    <%= fc.label :city, class: "text-right col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= fc.text_field :city, class: "form-control", id: "invoice-customer-city" %>
    </div>
  </div>
  <div class="form-group row">
    <%= fc.label :state, class: "text-right col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= fc.text_field :state, class: "form-control", id: "invoice-customer-state" %>
    </div>
  </div>
  <div class="form-group row">
    <%= fc.label :country, class: "text-right col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= fc.text_field :country, class: "form-control", id: "invoice-customer-country" %>
    </div>
  </div>
  <div class="form-group row">
    <%= fc.label :zip, class: "text-right col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= fc.text_field :zip, class: "form-control", id: "invoice-customer-zip" %>
    </div>
  </div>
  <% end %>
  <%= f.fields_for :invoice_items do |fii| %>
    <div class="form-group row">
      <%= fii.text_field :description, class: "form-control col-sm-4", id: "invoice-item-description" %>
      <%= fii.select :unit, [[ "Day", "day" ]], {}, class: "form-control col-sm-2", id: "invoice-item-description" %>
      <%= fii.number_field :quantity, class: "form-control col-sm-2", id: "invoice-item-quantity" %>
      <%= fii.number_field :price, class: "form-control col-sm-2", id: "invoice-item-price" %>
      <input class="form-control col-sm-2 text-right" disabled value="1234" />
    </div>
  <% end %>
  <div class="form-group row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <%= f.submit t(".submit"), class: "btn btn-primary", id: "invoice-submit" %>
    </div>
  </div>
<% end %>
