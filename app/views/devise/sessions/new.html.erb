<div class="mx-auto" style="width: 500px;">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row">
      <%= f.label :email, class: "text-right col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "user-email" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "text-right col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "user-password" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        </div>
      </div>
    <% end %>

    <div class="form-group row">
      <div class="col-sm-2"></div>
      <div class="col-sm-10">
        <%= f.submit "Log in", class: "btn btn-primary", id: "login-submit" %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-link", id: "user-registration" %><br />
      </div>
    </div>
  <% end %>
</div>
